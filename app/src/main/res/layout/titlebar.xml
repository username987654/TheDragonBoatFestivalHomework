<?xml version="1.0" encoding="utf-8"?>
<com.atguigu.mediaplayerwork.titleber.TitleBer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#D4D4D4"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ic_topbanner_logo" />

    <TextView
        android:id="@+id/tv_ssk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:background="@drawable/sousuokuang_bg_seloctor"
        android:clickable="true"
        android:drawableLeft="@drawable/sousuokuang_seloctor"
        android:paddingLeft="10dp"
        android:text="全网搜索"
        android:textColor="@drawable/sousuokuang_textcolor_seloctor"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_topbanner_game" />

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_point" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:src="@drawable/ic_topbanner_record" />

</com.atguigu.mediaplayerwork.titleber.TitleBer>