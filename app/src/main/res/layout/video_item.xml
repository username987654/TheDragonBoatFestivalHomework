<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_videoicon"
        android:background="@drawable/video_default_icon"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_video_title"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/video_name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:text="VideoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="20sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/vrdeotime"
                android:layout_weight="1"
                android:text="VideoTime"
                android:textSize="15sp"
                android:textColor="#44000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/videosize"
                android:text="VideoSize"
                android:textSize="15sp"
                android:textColor="#44000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>